<p id="notice"><%= notice %></p>

<h1>本棚</h1>

<table>
  <thead>
    <tr>
      <th>タイトル</th>
      <th>著者</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @books.each do |book| %>
      <tr>
        <td><%= book.title %></td>
        <td><%= book.author %></td>
        <td><%= link_to '見る', book %></td>
        <td><%= link_to '編集', edit_book_path(book) %></td>
        <td><%= link_to '削除', book, method: :delete, data: { confirm: '本当' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

